@model IEnumerable<PembayaranListrik.Models.joinpenggunaan>
@using PembayaranListrik.Helper;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/MasterTemplate/_mainLayout.cshtml";
    int no = 1;
}

<!-- /.navbar -->
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">

    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">


            <div class="row">
                <div class="col-md-12">
                    <!-- LINE CHART -->
                    <div class="card">
                        <div class="card-header ">
                            <button type="button" class="btn btn-success btn-sm rounded-pill" data-toggle="modal" data-target="#exampleModal">
                                <i class="fas fa-plus"></i> ADD Penggunaan
                            </button>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body" id="modalbersama">
                            <br />
                            <table id="example2" class="table table-bordered table-sm table-striped">
                                <thead>
                                    <tr class="bg-success">
                                        <th>No</th>
                                        <th>Nama Penggunaan </th>
                                        <th>Bulan</th>
                                        <th>Tahun</th>
                                        <th>Meter Awal</th>
                                        <th>Meter Akhir</th>
                                        <th>Aksi</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {

                                        <tr>
                                            <td>@no</td>
                                            <td>@item.nama_pelanggan </td>
                                            <td>@item.bulan</td>
                                            <td>@item.tahun</td>
                                            <td>@item.meter_awal</td>
                                            <td>@item.meter_ahir</td>
                                            <td>
                                                <button class="btn btn-danger" data-toggle="tooltip" data-placement="top" title="Hapus"> <a href="@Url.Action("delete","penggunaan", new { idd = item.id_penggunaan })" class="btnhapus"><i class="text-white fas fa-trash"></i> </a></button>

                                            </td>
                                        </tr>
                                        no++;
                                    }
                                </tbody>
                            </table><hr>


                        </div>
                        <!-- /.card-body -->
                        <daiv class="card-footer row">

                        </daiv>
                    </div>
                    <!-- /.card -->

                </div>
            </div>
    </section>
    <!-- /.content -->
</div>


<!-- edit -->
<!-- /.content-wrapper -->

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Penggunaan</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @using (Html.BeginForm("create", "Penggunaan", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

        <div class="modal-body">

            <input type="hidden" name="id_Penggunaan" value=" " />
            <div class="form-group">
                <label for="">Pelanggan</label>
                @Html.DropDownList("id_pelanggan", (SelectList)ViewBag.Penggunaan, "Pilih Pelanggan", htmlAttributes: new { @class = "form-control form-control-sm select2", id = "pktselectlist", style = "width: 100%;", title = "Tarif", required = "" })
            </div>
            <div class="form-group">
                <label for="">Bulan</label>
                <input type="text" name="bulan" placeholder="bulan" class="form-control form-control-sm" required>
            </div>
            <div class="form-group">
                <label for="">Tahun</label>
                <input type="text" name="tahun" placeholder="tahun" class="form-control form-control-sm" required>

            </div>
            <div class="form-group">
                <label for="">Meter Awal</label>
                <input type="text" name="meter_awal" placeholder="Meter Awal" class="form-control form-control-sm" required>

            </div>
            <div class="form-group">
                <label for="">Meter Akhir</label>
                <input type="text" name="meter_ahir" placeholder="Meter Akhir" class="form-control form-control-sm" required>

            </div>


        </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" id="submit" class="btn btn-success">Save changes</button>
                </div>
            }
        </div>
    </div>
</div>
